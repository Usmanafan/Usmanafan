#include<stdio.h>
#include<stdlib.h>
int a[50],n;
void create(int a[])
{
printf("enter the no. elements to create an array:\n");
scanf("%d",&n);
printf("enter the array elements:\n");
for(int i=0;i<n;i++)
scanf("%d",&a[i]);
}
void display(int a[])
{
printf("the array elements are :\n");
for(int i=0;i<n;i++)
printf("%d\n",a[i]);

}
void insert(int ele,int pos)
{
n=n+1;
for(int i=n-1;i>pos;i--)
{
a[i]=a[i-1];
}
a[pos]=ele;
}
void delete(int pos)
{
int ele;
if(pos>n)
{
printf("invalid position!\n");
}
ele=a[pos];
for(int i=pos;i<n;i++)
{
a[i]=a[i+1];
}
n=n-1;
}
void main()
{
int i, ele,choice,pos;
while(1)
{
printf("\n***********************\n");
printf("\nenter your choice:\n1.create\n2.display\n3.insert\n4.delete\n5.exit\n");
printf("___________________\n");
scanf("%d",&choice);
switch(choice)
{
case 1:create(a);
       break;
case 2:display(a);
       break;
case 3:printf("enter the element  to be inserted  :\n");
       scanf("%d",&ele);
       printf("enter the position:\n");
       scanf("%d",&pos);
       insert(ele,pos);
       break;
case 4:printf("enter the position:\n");
       scanf("%d",&pos);
       delete(pos); 
       break;
case 5:exit(0);
       break;
default:printf("invalid position!\n");
        break;

}}}
