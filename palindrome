#include<stdio.h>
main()
{
int n,rev=0,rem,orig;
printf("Enter an integer\n");
scanf("%d",&n);
orig=n;
while(n!=0)
{
rem=n%10;
rev=rev*10+rem;
n=n/10;
}
printf("\n reverse of %d=%d\n",orig,rev);
if(orig==rev)
printf("%d is a palindrome\n",orig);
else
printf("%d is not palindrome\n",orig);
}
