#include<stdio.h>
#include<stdlib.h>
int n,i;
void prime(int n)
{
if(n<2)
{
printf("it is NOT prime number\n");
exit(0);
}
for(i=2;i<=n/2;i++)
{
if(n%i==0)
{
printf("it is NOT prime number\n");
exit(0);
}
}
printf("it is prime number\n");
}
void main()
{
printf("enter the value of n\n");
scanf("%d",&n);
prime(n);
}

